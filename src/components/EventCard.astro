---
const { evt } = Astro.props;
const date = new Date(evt.date);
const nice = date.toLocaleDateString("en-CA", { year:"numeric", month:"long", day:"numeric" });
---
<article class="card" aria-labelledby={`evt-${evt.id}`}>
  <h3 id={`evt-${evt.id}`} style="margin-top:0;">{evt.title}</h3>
  <p><strong>Date</strong> {nice}</p>
  {evt.location && <p><strong>Location</strong> {evt.location}</p>}
  {evt.details && <p>{evt.details}</p>}
  {evt.link && <p><a class="btn" href={evt.link} target="_blank" rel="noopener">More info</a></p>}
</article>
