---
const { title = "Red Deer Reavers", description = "Medieval armoured combat in Central Alberta", pageClass = "" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="icon" href="/favicon.svg" />
    <style>
      :root{
        --primary:#1e0e4f;
        --accent:#d05621;
        --secondary:#730707;
        --bg:#0f0a24;
        --ink:#ffffff;
        --muted:#cfcfe6;
      }
      *{box-sizing:border-box}
      body{margin:0;background:var(--bg);color:var(--ink);font:16px/1.6 system-ui,Segoe UI,Roboto,Inter,Arial}
      a{color:var(--accent);text-decoration:none}
      a:hover{text-decoration:underline}
      .container{max-width:1100px;margin:0 auto;padding:20px}
      .btn{display:inline-block;padding:12px 18px;border-radius:12px;background:var(--accent);color:#fff;font-weight:700}
      .btn.alt{background:var(--secondary)}
      header,footer{background:var(--primary)}
      nav a{margin-right:14px}
      .hero{display:grid;gap:14px;padding:40px 0}
      .hero h1{font-size:42px;line-height:1.1;margin:0}
      .grid{display:grid;gap:18px}
      @media (min-width:800px){.grid.cols-3{grid-template-columns:repeat(3,1fr)}}
      .card{background:#1b1536;border:1px solid #2d2357;border-radius:16px;padding:18px}
      .tag{display:inline-block;padding:4px 10px;border-radius:100px;background:#2a204e;color:#fff;font-weight:600}
      .sr-only{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;border:0}
    </style>
  </head>
  <body class={pageClass}>
    <header>
      <div class="container" style="display:flex;align-items:center;gap:18px;justify-content:space-between;">
        <a href="/" class="tag" aria-label="Red Deer Reavers home">Reavers</a>
        <nav aria-label="Main navigation">
          <a href="/about">About</a>
          <a href="/sport">About the sport</a>
          <a href="/events">Events</a>
          <a href="/join">Join the fight</a>
          <a href="/donations">Support</a>
        </nav>
      </div>
    </header>
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    <footer>
      <div class="container">
        <p>Â© {new Date().getFullYear()} Red Deer Reavers</p>
        <p>Find us
          <a href="https://facebook.com/REPLACE" rel="noopener">Facebook</a> |
          <a href="https://instagram.com/REPLACE" rel="noopener">Instagram</a> |
          <a href="https://discord.gg/REPLACE" rel="noopener">Discord</a>
        </p>
      </div>
    </footer>
  </body>
</html>
